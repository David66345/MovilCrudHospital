<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registro"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <EditText
        android:id="@+id/ed_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/ed_apep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Apellido Paterno"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/ed_apem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Apellido Materno"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/ed_domicilio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Domicilio"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/ed_telefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Teléfono"
        android:inputType="number"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_libro"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Título del libro"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"/>

        <Spinner
            android:id="@+id/spin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <EditText
        android:id="@+id/ed_autor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Autor"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/ed_editorial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Editorial"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha del préstamo:"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ed_prea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="AAAA"
                    android:inputType="number"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/ed_prem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="MM"
                    android:inputType="number"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/ed_pred"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="DD"
                    android:inputType="number"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="10dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de devolución:"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ed_deva"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="AAAA"
                    android:inputType="number"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/ed_devm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="MM"
                    android:inputType="number"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/ed_devd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="DD"
                    android:inputType="number"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginHorizontal="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/b_agregar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/gris"
            android:backgroundTint="@color/azul_v3"
            android:text="Agregar" />

        <Button
            android:id="@+id/b_limpiar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/gris"
            android:backgroundTint="@color/azul_v3"
            android:text="Limpiar" />
    </LinearLayout>

</LinearLayout>