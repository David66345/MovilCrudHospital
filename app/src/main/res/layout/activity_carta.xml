<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".carta"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/l_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/azul_v2"
        android:layout_margin="40dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="308dp"
            android:src="@drawable/logo_bibliotech"
            android:alpha="0.7"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tx_nom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColor="@color/gris"
                android:hint="Nombre"
                android:textStyle="bold"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tx_ap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Apellido Paterno"
                android:textColor="@color/gris"
                android:textStyle="bold"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tx_am"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Apellido Materno"
                android:textColor="@color/gris"
                android:textStyle="bold"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tx_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Domicilio"
                android:textColor="@color/gris"
                android:textStyle="bold"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tx_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Teléfono"
                android:textColor="@color/gris"
                android:textStyle="bold"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tx_libro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Libro"
                android:textColor="@color/gris"
                android:textStyle="bold"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tx_autor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Autor"
                android:textColor="@color/gris"
                android:textStyle="bold"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tx_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Editorial"
                android:textColor="@color/gris"
                android:textStyle="bold"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tx_fpres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Fecha de préstamo"
                android:textColor="@color/gris"
                android:textStyle="bold"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tx_fdev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Fecha de devolución"
                android:textColor="@color/gris"
                android:textStyle="bold"
                android:textSize="15sp" />

            <Button
                android:id="@+id/b_llamar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Llamar"
                app:icon="@android:drawable/stat_sys_phone_call"
                android:textColor="@color/gris"
                android:backgroundTint="@color/azul_v3"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>